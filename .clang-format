---
Language: Cpp
BasedOnStyle: LLVM

# indent two spaces (or whatever you like)
IndentWidth: 4
TabWidth: 4
UseTab: Always

# Allman‚Äêstyle braces
BreakBeforeBraces: Allman

# indent "case" under "switch"
IndentCaseLabels: true

# more fine-grain brace wrapping
BraceWrapping:
  AfterFunction: true
  AfterControlStatement: true
  AfterCaseLabel: true
  BeforeElse: true
  BeforeCatch: true

# do NOT collapse short blocks onto one line
AllowShortBlocksOnASingleLine: false
